/* pages/homePage/homePage.wxss */
.header{
  background-color: #F9F9F9;
  display: flex;
  justify-content: space-around;
}
.searchBar{
  display: inline-block;
  margin: auto 0;
  /* width: 70%; */
  border-radius:15px ;
  background-color: gainsboro;
  vertical-align: middle;
}
.searchBar input{
  display: inline-block;
  border: none;

}
.searchBar icon{

  display: inline-block;
  vertical-align: baseline;
}
.searchBar input::placeholder{
    text-align: center;
    vertical-align: middle;
}
.header label{
  display: inline-block;
  /* margin: 0 10% 0 10px; */
  height: 100%;
  line-height: 100%;
  vertical-align: middle;
  padding: 2px;
}
.header label view{
  display: inline-block;
  transform: rotate(180deg);
  font-size: 10px;
}
.choseBox{
  background-color: #F9F9F9;
  position: fixed;
  left: 0px;
  top: 30px;
  width: 100%;
  z-index: 999;
  box-shadow:0rpx 6rpx 4rpx 0 rgba(0, 0,0, 0.1);
}
.choseBox radio-group{
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
  border-bottom: 1px solid gray;
  padding-bottom: 10rpx;
}
.choseBox button{
  left: 50%;
  transform: translate(-50%);
  margin:2px auto;
}
.qblock{
  border: 1px solid gray;
  box-shadow:6rpx 8rpx 6rpx 0 rgba(0, 0,0, 0.1),
            -2rpx -1rpx 3rpx 0 rgba(0, 0,0, 0.1);
  border-radius: 5px;
  margin:  5px 3% 10px 3%;
  font-size: 40rpx;
}
.titlekey{
  display: flex;
  justify-content: space-between;
}
.qtitle{
  font-weight: bolder;
}
.keyword{
  color: red;
  font-size: 32rpx;
}
.qhelp{
  color: gray;
  font-size: 32rpx;
  margin-left: 2px;
  margin: 15rpx auto;
}
